@model IEnumerable<CRLibre.Models.Contact>

@{
    ViewBag.Title = "Contactos";
}
<div class="row">
    <div class="card">
        <div class="card-header">Contactos</div>
        <div class="card-body">
            <div class="card-title">
                <h3 class="text-center title-2">Lista de Contactos</h3>
            </div>
            <hr>
            <!-- DATA TABLE -->
            <div class="table-data__tool">
                <div class="table-data__tool-left">
                    <div class="rs-select2--light rs-select2--md">
                        <select class="js-select2" name="property">
                            <option selected="selected">Tipo</option>
                            <option value="">Fisico</option>
                            <option value="">Juridico</option>
                        </select>
                        <div class="dropDownSelect2"></div>
                    </div>
                    <button class="au-btn-filter">
                        <i class="zmdi zmdi-filter-list"></i>Aplicar Filtro
                    </button>
                </div>
                <div class="table-data__tool-right">
                    
                    <button class="au-btn au-btn-icon au-btn--green au-btn--small" >
                        <i class="zmdi zmdi-plus"></i>add item
                    </button>
                    <div class="rs-select2--dark rs-select2--sm rs-select2--dark2">
                        <select class="js-select2" name="type">
                            <option selected="selected">Export</option>
                            <option value="">XML</option>
                            <option value="">CSV</option>
                        </select>
                        <div class="dropDownSelect2"></div>
                    </div>
                </div>
            </div>
            <div class="table-responsive table-responsive-data2">
                <table class="table table-data2">
                    <thead>
                        <tr>
                            <th>
                                <label class="au-checkbox">
                                    <input type="checkbox">
                                    <span class="au-checkmark"></span>
                                </label>
                            </th>
                            <th>Nombre</th>
                            <th>Tipo</th>
                            <th>Identificación</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        
                        @foreach (var item in Model)
    {
                        <tr class="tr-shadow">
                            <td>
                                <label class="au-checkbox">
                                    <input type="checkbox">
                                    <span class="au-checkmark"></span>
                                </label>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tipo_identificacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.numero_identificacion)
                            </td>
                            <td>
                                <div class="table-data-feature">
                                    <button class="item" data-toggle="tooltip" data-placement="top" title="Ver">
                                        <i class="zmdi zmdi-mail-send"></i>
                                    </button>
                                    <button class="item" data-toggle="tooltip" data-placement="top" title="Edit">
                                        <i class="zmdi zmdi-edit"></i>
                                    </button>
                                    <button class="item" data-toggle="tooltip" data-placement="top" title="Delete">
                                        <i class="zmdi zmdi-delete"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    <tr class="spacer"></tr>
}
                    </tbody>
                </table>
            </div>
            <!-- END DATA TABLE -->
        </div>
    </div>
</div>
